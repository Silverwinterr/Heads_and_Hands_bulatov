<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_parent"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="4dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/card_imageLong"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/card_imageMarginStart"
        android:layout_marginTop="@dimen/card_imageMarginTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/card_titleLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:layout_marginTop="14dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/card_imageLong"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/card_contentLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="test"
        app:layout_constraintStart_toEndOf="@+id/card_imageLong"
        app:layout_constraintTop_toBottomOf="@+id/card_titleLong" />

</androidx.constraintlayout.widget.ConstraintLayout>