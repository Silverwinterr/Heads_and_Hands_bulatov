<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="4dp"
    android:layout_width="@dimen/list_item_width"
    android:layout_height="@dimen/list_item_height">

    <ImageView
        android:id="@+id/card_image"
        android:layout_marginTop="@dimen/card_imageMarginTop"
        android:layout_marginStart="@dimen/card_imageMarginStart"
        android:layout_width="@dimen/card_image_width"
        android:layout_height="@dimen/card_image_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_titleMarginStart"
        android:layout_marginTop="@dimen/card_titleMarginTop"
        android:text="test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_image" />

    <TextView
        android:id="@+id/card_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_contentMarginStart"
        android:text="test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_title" />

</androidx.constraintlayout.widget.ConstraintLayout>