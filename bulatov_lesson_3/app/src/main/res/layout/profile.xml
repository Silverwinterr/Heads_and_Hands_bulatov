<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/layoutProfile_marginTop"
    android:layout_marginEnd="@dimen/layoutProfile_marginEnd"
    android:layout_marginBottom="@dimen/layoutProfile_marginBottom"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/image_marginStart"
        android:layout_marginTop="@dimen/image_marginTop"
        android:layout_marginBottom="@dimen/image_marginBottom"
        android:background="@drawable/profile_spec"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/textProfile_marginStart"
        android:layout_marginTop="@dimen/textProfile_marginTop"
        android:layout_marginBottom="@dimen/textProfile_marginBottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_profileID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Карта N2391921982"
            android:textColor="@color/text_data"
            android:textSize="@dimen/text" />

        <TextView
            android:id="@+id/text_profileSpec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Специалист"
            android:textColor="@color/text_data"
            android:textSize="@dimen/text" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>