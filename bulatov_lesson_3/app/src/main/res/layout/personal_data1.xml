<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.PersonalData">

    <data>

        <variable
            name="Personal1Data"
            type="com.bulatov.lesson3.User" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_personal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layoutPersonal_marginStart"
            android:layout_marginTop="@dimen/layoutPersonal_marginTop"
            android:text="@string/titlePersonal"
            android:textColor="@color/personal_data"
            android:textSize="@dimen/title" />

        <RelativeLayout
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_personal1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/layoutPersonal_marginStart"
            android:layout_marginTop="@dimen/layoutPersonal_marginTop"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/namePersonal"
                android:textSize="@dimen/title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/text_marginContent"
                android:text="@{Personal1Data.name}"
                android:textColor="@color/text_data"
                android:textSize="@dimen/text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/surname"
            android:layout_below="@+id/name"
            android:layout_alignParentStart="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layoutPersonal_marginStart"
            android:layout_marginTop="@dimen/layoutPersonal_marginTop"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/surnamePersonal"
                android:textSize="@dimen/title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/text_marginContent"
                android:text="@{Personal1Data.surname}"
                android:textColor="@color/text_data"
                android:textSize="@dimen/text" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/surname"
            android:layout_alignParentStart="true"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layoutPersonal_marginStart"
            android:layout_marginTop="@dimen/layoutPersonal_marginTop"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/emailPersonal"
                android:textSize="@dimen/title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/text_marginContent"
                android:text="@{Personal1Data.email}"
                android:textColor="@color/text_data"
                android:textSize="@dimen/text" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/email"
            android:layout_alignParentStart="true"
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layoutPersonal_marginStart"
            android:layout_marginTop="@dimen/layoutPersonal_marginTop"
            android:orientation="vertical">

            <TextView
                android:id="@+id/loginTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loginPersonal"
                android:textSize="@dimen/title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/text_marginContent"
                android:text="@{Personal1Data.login}"
                android:textColor="@color/text_data"
                android:textSize="@dimen/text" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/login"
            android:layout_alignParentStart="true"
            android:id="@+id/region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layoutPersonal_marginStart"
            android:layout_marginTop="@dimen/layoutPersonal_marginTop">

            <TextView
                android:id="@+id/regionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/regionPersonal"
                android:textSize="@dimen/title"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/regionTitle"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/text_marginContent"
                android:text="@{Personal1Data.region}"
                android:textColor="@color/text_data"
                android:textSize="@dimen/text" />

            <ImageView
                android:id="@+id/personal1_dataPenEdit"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_height"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/image_marginTop"
                android:layout_marginEnd="@dimen/image_marginEnd"
                android:background="@drawable/pen"
                android:contentDescription="@string/editPen" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/region"
            android:layout_alignParentStart="true"
            android:id="@+id/layoutExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layoutPersonal_marginStart"
            android:layout_marginTop="@dimen/layoutPersonal_marginTop"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/door_exit1"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_height"
                android:background="@drawable/ic_menu_exit"
                android:contentDescription="@string/doorExit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/door_exit1"
                android:text="@string/textPersonal_exit"
                android:textColor="@color/text_data"
                android:textSize="@dimen/text" />
        </RelativeLayout>

    </RelativeLayout>
</layout>