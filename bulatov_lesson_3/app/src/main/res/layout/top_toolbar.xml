<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/back_to_main"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:layout_marginStart="@dimen/image_marginStart"
        android:layout_marginTop="@dimen/image_marginTop"
        android:background="@drawable/ic_arrow_back_black_24_px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/topPen"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:layout_marginTop="@dimen/image_marginTop"
        android:layout_marginEnd="@dimen/image_marginEnd"
        android:background="@drawable/pen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/title_toolbar_start"
        android:layout_marginTop="@dimen/image_marginTop"
        android:gravity="center"
        android:text="Личный профиль"
        android:textColor="@color/text_data"
        android:textSize="@dimen/title_toolbar"
        app:layout_constraintStart_toEndOf="@+id/back_to_main"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>