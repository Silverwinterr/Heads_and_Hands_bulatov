<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:paddingLeft="100dp">
    <item android:width="60dp" android:height="60dp" android:end="30dp" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="10dp" android:topRightRadius="10dp" />
            <solid android:color="@color/color_sw" />
        </shape>
    </item>
    <item android:width="60dp" android:height="60dp" android:end="30dp" android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="10dp" android:topLeftRadius="10dp" />
            <solid android:color="@color/color_sw" />
        </shape>
    </item>
</selector>